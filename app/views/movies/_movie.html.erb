<%= form_for(@movies, remote: true) do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name, autofocus: true %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, col:40,row: 7 %>
  </p>

  <p>
    <%= f.label :created_at %><br/>
    <%= f.datetime_select :created_at %>
  </p> 

  <p>
    <%= f.label :udated_at %><br/>
    <%= f.datetime_select :updated_at %>
  </p> 

  <p>
    <%= f.label :total_gross %><br/>
    <%= f.number_field :total_gross %>
  </p>

  <p>
    <%= f.label :image_file_name %><br/>
    <%= f.text_field :image_file,size: 30, placeholder: 'GIF,JPEG,or PNG file name'%>
  </p>
    <%= f.label :capacity %><br/>
    <%= f.number_field :capacity%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>